<style>
  .community-page {
    background: var(--gray-999);
    color: var(--gray-100);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Hero Section */
  .hero {
    padding: 6rem 0 4rem;
    background: linear-gradient(135deg, var(--gray-999) 0%, var(--gray-900) 100%);
    text-align: center;
  }

  .hero h1 {
    font-size: 3.5rem;
    font-weight: 700;
    color: var(--accent-regular);
    margin-bottom: 1.5rem;
    line-height: 1.1;
  }

  .hero-description {
    font-size: 1.2rem;
    color: var(--gray-300);
    max-width: 600px;
    margin: 0 auto 3rem;
    line-height: 1.6;
  }

  .hero-stats {
    display: flex;
    justify-content: center;
    gap: 3rem;
    flex-wrap: wrap;
  }

  .stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .stat-number {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--accent-regular);
  }

  .stat-label {
    font-size: 0.9rem;
    color: var(--gray-400);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Participation Section */
  .participation {
    padding: 6rem 0;
    background: var(--gray-900);
  }

  .participation-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: start;
  }

  .participation-content h2 {
    font-size: 2.5rem;
    color: var(--accent-regular);
    margin-bottom: 1.5rem;
  }

  .participation-content > p {
    font-size: 1.1rem;
    color: var(--gray-300);
    margin-bottom: 3rem;
    line-height: 1.6;
  }

  /* Steps */
  .participation-steps {
    margin-bottom: 3rem;
  }

  .step {
    display: flex;
    gap: 1rem;
    margin-bottom: 2rem;
    align-items: flex-start;
  }

  .step-number {
    background: var(--accent-regular);
    color: var(--accent-text-over);
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    flex-shrink: 0;
  }

  .step-content h3 {
    font-size: 1.2rem;
    color: var(--gray-100);
    margin-bottom: 0.5rem;
  }

  .step-content p {
    color: var(--gray-300);
    font-size: 0.95rem;
    line-height: 1.5;
  }

  /* CTA */
  .participation-cta {
    text-align: center;
  }

  .cta-primary {
    background: var(--accent-regular);
    color: var(--accent-text-over);
    padding: 1.2rem 2.5rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: 600;
    font-size: 1.1rem;
    transition: all 0.3s ease;
    border: 2px solid var(--accent-regular);
    display: inline-block;
    margin-bottom: 1rem;
  }

  .cta-primary:hover {
    background: var(--accent-dark);
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }

  .cta-note {
    color: var(--gray-400);
    font-size: 0.9rem;
    font-style: italic;
  }

  /* Tips */
  .participation-tips {
    background: var(--gray-999);
    padding: 2rem;
    border-radius: 1rem;
    border: 1px solid var(--gray-800);
  }

  .participation-tips h3 {
    font-size: 1.5rem;
    color: var(--accent-regular);
    margin-bottom: 1.5rem;
  }

  .tips-list {
    list-style: none;
    padding: 0;
    margin-bottom: 2rem;
  }

  .tips-list li {
    padding: 0.75rem 0;
    color: var(--gray-300);
    border-bottom: 1px solid var(--gray-800);
    font-size: 0.95rem;
    line-height: 1.5;
  }

  .tips-list li:last-child {
    border-bottom: none;
  }

  .social-sharing {
    background: var(--gray-900);
    padding: 1.5rem;
    border-radius: 0.5rem;
    border: 1px solid var(--gray-700);
  }

  .social-sharing h4 {
    font-size: 1.1rem;
    color: var(--accent-regular);
    margin-bottom: 0.5rem;
  }

  .social-sharing p {
    color: var(--gray-300);
    font-size: 0.9rem;
    margin: 0;
    line-height: 1.5;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2.5rem;
    }

    .hero-stats {
      gap: 2rem;
    }

    .stat-number {
      font-size: 2rem;
    }

    .participation-grid {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .participation-content h2 {
      font-size: 2rem;
    }

    .step {
      align-items: center;
    }

    .step-number {
      width: 2rem;
      height: 2rem;
      font-size: 0.9rem;
    }
  }
</style>