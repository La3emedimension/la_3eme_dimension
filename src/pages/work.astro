---
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactCTA from '../components/ContactCTA.astro';
import PortfolioPreview from '../components/PortfolioPreview.astro';
import Hero from '../components/Hero.astro';
import Grid from '../components/Grid.astro';
import { useTranslations, type Locale } from '../i18n';
import { getLocalizedCollection } from '../lib/collections';

const locale: Locale = 'fr';
const t = useTranslations(locale);

const projects = (await getLocalizedCollection('work', locale)).sort(
	(a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf(),
);
---

<BaseLayout
	locale={locale}
	title="Réalisations | La 3ème dimension"
	description="learn about La 3ème dimension project"
>
	<div class="stack gap-20">
		<main class="wrapper stack gap-8">
			<Hero
				title={t.work.title}
				tagline={t.work.tagline}
				align="start"
			/>
			<Grid variant="offset">
				{
					projects.map((project) => (
						<li>
							<PortfolioPreview project={project} locale={locale} />
						</li>
					))
				}
			</Grid>
		</main>
		<ContactCTA locale={locale} />
	</div>
</BaseLayout>


