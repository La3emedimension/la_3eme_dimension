---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Hero from '../../components/Hero.astro';
import Icon from '../../components/Icon.astro';
import ContactCTA from '../../components/ContactCTA.astro';
import { type Locale } from '../../i18n';

const locale: Locale = 'en';
---

<BaseLayout
    locale={locale}
    title="Contact - Custom 3D Modeling | La 3ème dimension"
    description="Custom 3D modeling and design service for your projects. We bring your ideas to life with precision and professionalism."
    noIndex={true}
>
    <div class="stack gap-20">
        <main class="wrapper stack gap-8">
            <Hero title="Bring your projects to life" align="center">
                <p class="tagline">Custom design and 3D printing workshop</p>
                <div class="hero-contact-buttons">
                    <a href="mailto:la3emedim@gmail.com" class="contact-button">
                        Contact us <Icon icon="pencil-line" size="1.2em" />
                    </a>
                    <a href="tel:0760853870" class="phone-button">
                        07 60 85 38 70 <Icon icon="phone" size="1.2em" />
                    </a>
                </div>
            </Hero>

            <section class="services-grid">
                <div class="service-card">
                    <div class="icon-wrapper">
                        <Icon icon="strategy" size="2.5em" />
                    </div>
                    <h3>Listening & Advice</h3>
                    <p>We take the time to analyze your needs to propose the most suitable solution for your project.</p>
                </div>

                <div class="service-card">
                    <div class="icon-wrapper">
                        <Icon icon="pencil-line" size="2.5em" />
                    </div>
                    <h3>Custom Design</h3>
                    <p>Precise and professional 3D modeling, from prototype to final part, adapted to your technical constraints.</p>
                </div>

                <div class="service-card">
                    <div class="icon-wrapper">
                        <Icon icon="rocket-launch" size="2.5em" />
                    </div>
                    <h3>Production</h3>
                    <p>3D printing with a wide range of materials and finishes for all types of projects.</p>
                </div>
            </section>

            <section class="expertise">
                <h2>Our expertise</h2>
                <div class="expertise-content">
                    <div class="expertise-text">
                        <ul>
                            <li><strong>Rapid prototyping</strong> - From idea to object in just a few days</li>
                            <li><strong>Technical parts</strong> - Precision and strength for your applications</li>
                            <li><strong>Small series</strong> - Production adapted to your volumes</li>
                            <li><strong>Astronomy</strong> - Specialized instruments and accessories</li>
                            <li><strong>Product design</strong> - Aesthetics and functionality</li>
                        </ul>
                    </div>
                    <div class="expertise-highlight">
                        <h3>Why choose La 3ème dimension?</h3>
                        <p>A dual technical and creative expertise acquired since 2016, at the service of your projects. From industrial design to design conception, we master the entire creation chain.</p>
                        <p><strong>Result:</strong> Functional, robust and refined parts, delivered on time.</p>
                    </div>
                </div>
            </section>

            <section class="process">
                <h2>How does it work?</h2>
                <div class="process-steps">
                    <div class="step">
                        <div class="step-number">1</div>
                        <h4>Discussion</h4>
                        <p>You present your project, needs and constraints</p>
                    </div>
                    <div class="step">
                        <div class="step-number">2</div>
                        <h4>Quote</h4>
                        <p>We provide a detailed quote and timeline</p>
                    </div>
                    <div class="step">
                        <div class="step-number">3</div>
                        <h4>Design</h4>
                        <p>3D modeling with validation at each important step</p>
                    </div>
                    <div class="step">
                        <div class="step-number">4</div>
                        <h4>Production</h4>
                        <p>Printing and finishing according to your specifications</p>
                    </div>
                    <div class="step">
                        <div class="step-number">5</div>
                        <h4>Delivery</h4>
                        <p>Receive your parts, ready to use</p>
                    </div>
                </div>
            </section>

            <section class="gallery-section">
                <h2 class="gallery-title">Examples of our work</h2>
                <div class="gallery-grid">
                    <img src="/assets/surmesure1.jpg" alt="Custom creation example 1" />
                    <img src="/assets/surmesure2.jpg" alt="Custom creation example 2" />
                    <img src="/assets/surmesure3.jpg" alt="Custom creation example 3" />
                    <img src="/assets/surmesure4.jpg" alt="Custom creation example 4" />
                    <img src="/assets/surmesure5.jpg" alt="Custom creation example 5" />
                    <img src="/assets/Surmesure6.jpg" alt="Custom creation example 6" />
                    <img src="/assets/surmesure7.jpg" alt="Custom creation example 7" />
                    <img src="/assets/surmesure8.jpg" alt="Custom creation example 8" />
                    <img src="/assets/Surmesure10.jpg" alt="Custom creation example 10" />
                </div>
            </section>

        </main>

        <ContactCTA locale={locale} />
    </div>
</BaseLayout>

<style>
    .wrapper {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    .stack {
        display: flex;
        flex-direction: column;
    }

    .gap-20 {
        gap: 5rem;
    }

    .gap-8 {
        gap: 2rem;
    }

    .tagline {
        font-size: var(--text-xl);
        color: var(--accent-regular);
        font-weight: 600;
        text-align: center;
        margin-top: 1rem;
    }

    .hero-contact-buttons {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        align-items: center;
        margin-top: 2rem;
    }

    @media (min-width: 50em) {
        .hero-contact-buttons {
            flex-direction: row;
            justify-content: center;
            gap: 1.5rem;
        }
    }

    .contact-button, .phone-button {
        display: flex;
        align-items: center;
        padding: 0.75rem 1.5rem;
        gap: 0.5rem;
        color: var(--accent-text-over);
        border: 1px solid var(--accent-regular);
        background-color: var(--accent-regular);
        border-radius: 999rem;
        font-size: var(--text-md);
        line-height: 1.35;
        white-space: nowrap;
        text-decoration: none;
        transition: all 0.3s ease;
        font-weight: 500;
    }

    .contact-button:hover, .phone-button:hover {
        background-color: var(--accent-dark);
        transform: translateY(-2px);
        box-shadow: var(--shadow-md);
    }

    .services-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 2rem;
        margin-top: 3rem;
    }

    .service-card {
        background: var(--gradient-subtle);
        border: 1px solid var(--gray-800);
        border-radius: 1rem;
        padding: 2rem;
        text-align: center;
        transition: all 0.3s ease;
    }

    .service-card:hover {
        transform: translateY(-4px);
        box-shadow: var(--shadow-lg);
        border-color: var(--accent-regular);
    }

    .icon-wrapper {
        color: var(--accent-regular);
        margin-bottom: 1rem;
    }

    .service-card h3 {
        font-size: var(--text-xl);
        margin-bottom: 0.75rem;
        color: var(--gray-0);
    }

    .service-card p {
        color: var(--gray-300);
        line-height: 1.6;
    }

    .expertise {
        background: var(--gradient-subtle);
        border: 1px solid var(--gray-800);
        border-radius: 1.5rem;
        padding: 3rem 2rem;
        margin-top: 3rem;
    }

    .expertise h2 {
        font-size: var(--text-3xl);
        text-align: center;
        margin-bottom: 2rem;
        color: var(--gray-0);
    }

    .expertise-content {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
    }

    @media (min-width: 50em) {
        .expertise-content {
            grid-template-columns: 1fr 1fr;
        }
    }

    .expertise-text ul {
        list-style: none;
        padding: 0;
    }

    .expertise-text li {
        padding: 0.75rem 0;
        color: var(--gray-300);
        border-bottom: 1px solid var(--gray-800);
    }

    .expertise-text li:last-child {
        border-bottom: none;
    }

    .expertise-text strong {
        color: var(--accent-regular);
    }

    .expertise-highlight {
        background: var(--gray-999);
        padding: 2rem;
        border-radius: 1rem;
        border: 1px solid var(--accent-regular);
    }

    .expertise-highlight h3 {
        color: var(--accent-regular);
        margin-bottom: 1rem;
        font-size: var(--text-xl);
    }

    .expertise-highlight p {
        color: var(--gray-300);
        line-height: 1.6;
        margin-bottom: 1rem;
    }

    .expertise-highlight p:last-child {
        margin-bottom: 0;
    }

    .process {
        margin-top: 3rem;
    }

    .process h2 {
        font-size: var(--text-3xl);
        text-align: center;
        margin-bottom: 3rem;
        color: var(--gray-0);
    }

    .process-steps {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 2rem;
    }

    .step {
        text-align: center;
    }

    .step-number {
        width: 60px;
        height: 60px;
        background: var(--accent-regular);
        color: var(--accent-text-over);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: var(--text-2xl);
        font-weight: 700;
        margin: 0 auto 1rem;
    }

    .step h4 {
        font-size: var(--text-lg);
        margin-bottom: 0.5rem;
        color: var(--gray-0);
    }

    .step p {
        color: var(--gray-300);
        font-size: var(--text-sm);
        line-height: 1.5;
    }

    /* Gallery Styles */
    .gallery-section {
        margin: 4rem 0;
        width: 100%;
    }

    .gallery-title {
        font-size: var(--text-2xl);
        text-align: center;
        margin-bottom: 2rem;
        color: var(--gray-0);
    }

    .gallery-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
        width: 100%;
        max-width: 1400px;
        margin: 0 auto;
    }

    .gallery-grid img {
        width: 100%;
        height: 100%;
        aspect-ratio: 4 / 3;
        object-fit: cover;
        border-radius: 1rem;
        box-shadow: var(--shadow-md);
        transition: all 0.3s ease;
    }

    .gallery-grid img:hover {
        transform: translateY(-4px);
        box-shadow: var(--shadow-xl);
    }

    @media (min-width: 50em) {
        .gallery-title {
            font-size: var(--text-3xl);
            margin-bottom: 3rem;
        }

        .gallery-grid {
            grid-template-columns: repeat(3, 1fr);
            gap: 2rem;
        }
    }
</style>
