<style>
	.legal-page {
		padding: 2rem 1rem;
	}

	.legal-container {
		display: flex;
		flex-direction: column;
		gap: 3rem;
		max-width: 1400px;
		margin: 0 auto;
	}

	.legal-column {
		flex: 1;
		min-width: 0;
	}

	.legal-column h2 {
		color: var(--gray-0);
		font-size: var(--text-2xl);
		margin-bottom: 1.5rem;
		padding-bottom: 0.5rem;
		border-bottom: 2px solid var(--accent-regular);
	}

	h4 {
		color: var(--gray-0);
		font-size: var(--text-lg);
		margin-top: 1.5rem;
		margin-bottom: 0.5rem;
		margin-left: 1rem;
	}

	p {
		text-align: left;
		font-size: 0.9rem;
		line-height: 1.6;
		color: var(--gray-200);
		margin: 0.5rem 0;
		margin-left: 1.5rem;
		margin-right: 1rem;
	}

	ul {
		margin-left: 3rem;
		margin-right: 1rem;
		color: var(--gray-200);
		font-size: 0.9rem;
		line-height: 1.6;
	}

	ul li {
		margin: 0.3rem 0;
	}

	strong {
		color: var(--gray-0);
	}

	@media (min-width: 768px) {
		.legal-container {
			flex-direction: row;
			gap: 2rem;
			align-items: flex-start;
		}

		.legal-column {
			max-height: 80vh;
			overflow-y: auto;
			padding-right: 1rem;
		}

		.legal-column::-webkit-scrollbar {
			width: 8px;
		}

		.legal-column::-webkit-scrollbar-track {
			background: var(--gray-999);
			border-radius: 4px;
		}

		.legal-column::-webkit-scrollbar-thumb {
			background: var(--accent-regular);
			border-radius: 4px;
		}

		.legal-column::-webkit-scrollbar-thumb:hover {
			background: var(--accent-dark);
		}
	}

	@media (min-width: 1024px) {
		.legal-page {
			padding: 3rem 2rem;
		}

		p {
			font-size: 1rem;
		}

		ul {
			font-size: 1rem;
		}
	}
</style>
