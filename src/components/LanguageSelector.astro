---
import { getAlternatePath, type Locale } from '../i18n';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const currentPath = Astro.url.pathname;
const alternatePath = getAlternatePath(currentPath, locale);
---

<a href={alternatePath} class={`lang-toggle ${locale === 'en' ? 'lang-en' : 'lang-fr'}`} aria-label={locale === 'fr' ? 'Switch to English' : 'Passer en franÃ§ais'}>
  <span class="lang-icon lang-fr">FR</span>
  <span class="lang-icon lang-en">EN</span>
</a>

<style>
  .lang-toggle {
    display: flex;
    position: relative;
    border: 0;
    border-radius: 999rem;
    padding: 0;
    background-color: var(--gray-999);
    box-shadow: inset 0 0 0 1px var(--accent-overlay);
    cursor: pointer;
    text-decoration: none;
    overflow: hidden;
  }

  .lang-icon {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem;
    width: 2rem;
    height: 2rem;
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--accent-overlay);
    z-index: 2;
  }

  /* Background slider on the first icon (FR) */
  .lang-toggle .lang-icon.lang-fr::before {
    content: '';
    position: absolute;
    inset: 0;
    background-color: var(--accent-regular);
    border-radius: 999rem;
    z-index: -1;
  }

  /* Move background when English is active */
  .lang-toggle.lang-en .lang-icon.lang-fr::before {
    transform: translateX(100%);
  }

  /* Highlight active language */
  .lang-toggle.lang-en .lang-icon.lang-en,
  .lang-toggle.lang-fr .lang-icon.lang-fr {
    color: var(--accent-text-over);
  }

  @media (prefers-reduced-motion: no-preference) {
    .lang-icon,
    .lang-icon.lang-fr::before {
      transition:
        transform var(--theme-transition),
        color var(--theme-transition);
    }
  }

  @media (forced-colors: active) {
    .lang-icon.lang-fr::before {
      background-color: SelectedItem;
    }
  }
</style>
