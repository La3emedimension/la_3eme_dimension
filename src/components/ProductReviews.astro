---
import Icon from './Icon.astro';

interface Review {
  author: string;
  rating: number;
  date: string;
  title: string;
  content: string;
  verified?: boolean;
}

interface Props {
  reviews: Review[];
  averageRating: number;
  totalReviews: number;
  productName: string;
}

const { reviews, averageRating, totalReviews, productName } = Astro.props;

// Generate structured data for reviews
const reviewsStructuredData = {
  "@context": "https://schema.org",
  "@type": "Product",
  "name": productName,
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": averageRating.toString(),
    "reviewCount": totalReviews.toString(),
    "bestRating": "5",
    "worstRating": "1"
  },
  "review": reviews.map(review => ({
    "@type": "Review",
    "author": {
      "@type": "Person",
      "name": review.author
    },
    "datePublished": review.date,
    "reviewRating": {
      "@type": "Rating",
      "ratingValue": review.rating.toString(),
      "bestRating": "5",
      "worstRating": "1"
    },
    "reviewBody": review.content,
    "name": review.title
  }))
};

// Helper to render stars
const renderStars = (rating: number) => {
  return Array.from({ length: 5 }, (_, i) => i < rating);
};
---

<section class="reviews-section" id="reviews">
  <div class="reviews-container">
    <div class="reviews-header">
      <h2>Avis clients</h2>
      <div class="rating-summary">
        <div class="stars-large">
          {renderStars(Math.round(averageRating)).map(filled => (
            <Icon icon="star-fill" color={filled ? "#FFD700" : "#4a4a4a"} size="1.5em" />
          ))}
        </div>
        <p class="rating-text">
          <strong>{averageRating.toFixed(1)}</strong> / 5 basé sur <strong>{totalReviews}</strong> avis
        </p>
      </div>
    </div>

    <div class="reviews-grid">
      {reviews.map((review) => (
        <article class="review-card">
          <div class="review-header">
            <div class="review-author">
              <div class="author-avatar">
                {review.author.charAt(0).toUpperCase()}
              </div>
              <div class="author-info">
                <p class="author-name">
                  {review.author}
                  {review.verified && <span class="verified-badge" title="Achat vérifié">✓</span>}
                </p>
                <p class="review-date">{new Date(review.date).toLocaleDateString('fr-FR', { year: 'numeric', month: 'long', day: 'numeric' })}</p>
              </div>
            </div>
            <div class="review-stars">
              {renderStars(review.rating).map(filled => (
                <Icon icon="star-fill" color={filled ? "#FFD700" : "#4a4a4a"} size="1em" />
              ))}
            </div>
          </div>
          <h3 class="review-title">{review.title}</h3>
          <p class="review-content">{review.content}</p>
        </article>
      ))}
    </div>

    <div class="reviews-cta">
      <p>Vous avez acheté ce produit ?</p>
      <a href="mailto:la3emedim@gmail.com?subject=Avis sur {productName}" class="cta-button">
        Laisser un avis
      </a>
    </div>
  </div>
</section>

<script type="application/ld+json" set:html={JSON.stringify(reviewsStructuredData)} />

<style>
