---
import { useTranslations, type Locale } from '../i18n';

interface PricingOption {
    title: string;
    priceNote?: string;
    included?: string[];
    description?: string;
    afterCtaNote?: string;
    ctaText?: string;
    ctaHref?: string;
}

interface Props {
    title: string;
    price?: string;
    priceNote?: string;
    included?: string[];
    ctaText?: string;
    ctaHref?: string;
    optionsTitle?: string;
    options: PricingOption[];
    afterCtaNote?: string;
    layout?: string;
    locale?: Locale;
}

const {
    title,
    price,
    priceNote,
    included = [],
    ctaText,
    ctaHref,
    optionsTitle,
    options,
    afterCtaNote,
    layout,
    locale = 'fr',
} = Astro.props;

const t = useTranslations(locale);

const isExternalLink = (href: string) => href.startsWith('http://') || href.startsWith('https://');
---

<section class="pricing-section" id="pricing">
    <div class="container">
        <h2>{title || t.product.pricingTitle}</h2>
        {layout === 'cards' ? (
            <div class="options-cards-grid">
                {options.map((option) => (
                    <div class="option-card">
                        <h3>{option.title}</h3>
                        {option.priceNote && <div class="price">{option.priceNote}</div>}
                        {option.included && (
                            <ul class="included">
                                {option.included.map((item) => <li>{item}</li>)}
                            </ul>
                        )}
                        {option.description && <p set:html={option.description} />}
                        {option.ctaHref && (
                            <a
                                href={option.ctaHref}
                                class="cta-primary"
                                {...isExternalLink(option.ctaHref) && { target: '_blank', rel: 'noopener noreferrer' }}
                            >
                                {option.ctaText || 'Commander'}
                            </a>
                        )}
                        {option.afterCtaNote && <p class="after-cta-note" set:html={option.afterCtaNote} />}
                    </div>
                ))}
            </div>
        ) : (
            <div class={`pricing-grid ${options.length === 0 ? 'single-card' : ''}`}>
                <div class="pricing-card main-offer">
                    <h3>{title}</h3>
                    <div class="price">{price}</div>
                    <p class="price-note">{priceNote}</p>
                    <ul class="included">
                        {included.map((item) => <li>{item}</li>)}
                    </ul>
                    {ctaHref && (
                        <a
                            href={ctaHref}
                            class="cta-primary"
                            {...isExternalLink(ctaHref) && { target: '_blank', rel: 'noopener noreferrer' }}
                        >
                            {ctaText}
                        </a>
                    )}
                    {afterCtaNote && <p class="after-cta-note" set:html={afterCtaNote} />}
                </div>
                {options.length > 0 && (
                    <div class="pricing-card">
                        <h3>{optionsTitle}</h3>
                        <div class="optics-options">
                            {options.map((option) => (
                                <div class="option">
                                    <h4>{option.title}</h4>
                                    {option.priceNote && <p class="option-price-note">{option.priceNote}</p>}
                                    {option.included && (
                                        <ul class="included">
                                            {option.included.map((item) => <li>{item}</li>)}
                                        </ul>
                                    )}
                                    {option.description && <p set:html={option.description} />}
                                    {option.afterCtaNote && <p class="after-cta-note" set:html={option.afterCtaNote} />}
                                </div>
                            ))}
                        </div>
                    </div>
                )}
            </div>
        )}
    </div>
</section>

<script>
    // Add target="_blank" to external links in HTML content
    document.addEventListener('DOMContentLoaded', () => {
        const pricingSection = document.querySelector('.pricing-section');
        if (pricingSection) {
            const links = pricingSection.querySelectorAll('a[href^="http"]');
            links.forEach((link) => {
                if (!link.hasAttribute('target')) {
                    link.setAttribute('target', '_blank');
                    link.setAttribute('rel', 'noopener noreferrer');
                }
            });
        }
    });
</script>

<style>
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    .pricing-section {
        padding: 6rem 0;
        background: var(--gray-900);
    }

    .pricing-section h2 {
        text-align: center;
        font-size: 2.5rem;
        color: var(--gray-100);
        margin-bottom: 4rem;
    }

    .pricing-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 3rem;
        max-width: 900px;
        margin: 0 auto;
        align-items: stretch;
    }

    .pricing-grid.single-card {
        grid-template-columns: 1fr;
        max-width: 450px;
    }

    .pricing-card {
        background: var(--gray-999);
        padding: 3rem 2rem;
        border-radius: 1rem;
        border: 1px solid var(--gray-800);
        text-align: center;
        min-height: 600px;
        display: flex;
        flex-direction: column;
    }

    .main-offer {
        position: relative;
    }

    .pricing-card h3 {
        font-size: 1.8rem;
        color: var(--gray-100);
        margin-bottom: 1rem;
    }

    .price {
        font-size: 3rem;
        font-weight: 700;
        color: var(--accent-regular);
        margin-bottom: 0.5rem;
    }

    .price-note {
        color: var(--gray-400);
        margin-bottom: 2rem;
    }

    .after-cta-note {
        color: var(--gray-400);
        margin-top: 1rem;
        font-size: 0.9rem;
        text-align: center;
        font-style: italic;
    }

    .included {
        list-style: none;
        padding: 0;
        margin-bottom: 2rem;
    }

    .included li {
        padding: 0.5rem 0;
        color: var(--gray-300);
        border-bottom: 1px solid var(--gray-800);
    }

    .included li:before {
        content: "âœ“ ";
        color: var(--accent-regular);
        font-weight: bold;
    }

    .cta-primary {
        background-color: var(--accent-regular);
        color: var(--accent-text-over);
        padding: 0.75rem 0.5rem;
        border-radius: 0.5rem;
        text-decoration: none;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 3rem;
        box-sizing: border-box;
        text-align: center;
        width: fit-content;
        margin: 0.5rem auto 0;
    }

    .cta-primary:hover {
        background: var(--accent-dark);
        transform: translateY(-2px);
    }

    .optics-options {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }

    .optics-options .option {
        margin-bottom: 1.5rem;
        text-align: center;
        padding-bottom: 1.5rem;
        border-bottom: 1px solid var(--gray-800);
    }

    .optics-options .option:last-child {
        border-bottom: none;
        padding-bottom: 0;
    }

    .optics-options h4 {
        color: var(--accent-regular);
        margin-bottom: 0.5rem;
        font-size: 3rem;
        font-weight: 700;
    }

    .option-price-note {
        color: var(--gray-400);
        margin-bottom: 2rem;
    }

    .optics-options p {
        color: var(--gray-300);
        font-size: 0.9rem;
    }

    
    .cta-primary:hover {
        background-color: var(--accent-dark);
        transform: translateY(-2px);
    }

    .options-cards-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 1.5rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .option-card {
        background: var(--gray-999);
        padding: 2rem 1.5rem;
        border-radius: 1rem;
        border: 1px solid var(--gray-800);
        text-align: center;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .option-card h3 {
        font-size: 1.2rem;
        color: var(--gray-100);
    }

    .option-card .price {
        font-size: 2rem;
        font-weight: 700;
        color: var(--accent-regular);
        margin-bottom: 0;
    }

    .option-card .included {
        margin-bottom: 0;
        text-align: left;
    }

    .option-card .cta-primary {
        margin-top: auto;
        width: 100%;
        box-sizing: border-box;
    }

    @media (max-width: 1024px) {
        .options-cards-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (max-width: 768px) {
        .options-cards-grid {
            grid-template-columns: 1fr;
        }

        .pricing-grid {
            grid-template-columns: 1fr;
        }

        .main-offer {
            transform: none;
        }

        .pricing-section h2 {
            font-size: 2rem;
        }

        .pricing-card h3 {
            font-size: 1.2rem;
        }

        .price {
            font-size: 2rem;
        }

        .cta-primary {
            font-size: 1rem;
        }

        .optics-options h4 {
            font-size: 2rem;
        }

        .optics-options p {
            font-size: 0.8rem;
        }
    }
</style>
