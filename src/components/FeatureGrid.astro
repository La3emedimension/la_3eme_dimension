---
import Icon from './Icon.astro';

interface Feature {
	icon: string;
	title: string;
	description: string;
}

interface Props {
	title: string;
	features: Feature[];
}

const { title, features } = Astro.props;
---

<section class="features-section">
	<div class="container">
		<h2>{title}</h2>
		<div class="features-grid">
			{features.map(feature => (
				<div class="feature-card">
					<div class="feature-icon">
						<Icon icon={feature.icon} size="2em" />
					</div>
					<h3>{feature.title}</h3>
					<p>{feature.description}</p>
				</div>
			))}
		</div>
	</div>
</section>

<style>
	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	.features-section {
		padding: 6rem 0;
		background: var(--gray-999);
	}

	.features-section h2 {
		text-align: center;
		font-size: 2.5rem;
		color: var(--gray-100);
		margin-bottom: 4rem;
	}

	.features-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 2rem;
	}

	.feature-card {
		background: var(--gray-900);
		padding: 2rem;
		border-radius: 1rem;
		text-align: center;
		border: 1px solid var(--gray-800);
		transition: all 0.3s ease;
	}

	.feature-card:hover {
		transform: translateY(-5px);
		box-shadow: var(--shadow-lg);
		border-color: var(--accent-regular);
	}

	.feature-icon {
		color: var(--accent-regular);
		margin-bottom: 1rem;
	}

	.feature-card h3 {
		font-size: 1.5rem;
		color: var(--gray-100);
		margin-bottom: 1rem;
	}

	.feature-card p {
		color: var(--gray-300);
		line-height: 1.6;
	}

	/* Style compact pour les sections processus */
	:global(#section-process) .features-grid {
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 1.5rem;
	}

	:global(#section-process) .feature-card {
		padding: 1.5rem;
	}

	:global(#section-process) .feature-card h3 {
		font-size: 1.25rem;
		margin-bottom: 0.75rem;
	}

	:global(#section-process) .feature-card p {
		font-size: 0.9rem;
		line-height: 1.5;
	}

	:global(#section-process) .feature-icon {
		margin-bottom: 0.75rem;
	}

	/* Style compact pour la section services */
	:global(#section-services) .features-grid {
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 1.5rem;
	}

	:global(#section-services) .feature-card {
		padding: 1.5rem;
		height: auto;
		min-height: auto;
	}

	:global(#section-services) .feature-icon {
		margin-bottom: 0.5rem;
	}

	:global(#section-services) .feature-card h3 {
		font-size: 1.3rem;
		margin-bottom: 0.75rem;
	}

	:global(#section-services) .feature-card p {
		font-size: 0.95rem;
		line-height: 1.5;
		margin: 0;
	}
</style>