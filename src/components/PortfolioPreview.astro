---
import type { CollectionEntry } from 'astro:content';
import { localePath, type Locale } from '../i18n';
import { getSlugWithoutLocale } from '../lib/collections';

interface Props {
	project: CollectionEntry<'work'>;
	featured?: boolean;
	locale?: Locale;
}

const { project, featured = false, locale = 'fr' } = Astro.props;
const { data, id } = project;
const slug = getSlugWithoutLocale(id, locale);
---

<a class={`card ${featured ? 'featured' : ''}`} href={localePath(`/work/${slug}/`, locale)}>
	<span class="title">{data.title}</span>
	<img src={data.img} alt={data.img_alt || ''} loading="lazy" decoding="async" />
	{featured && <div class="featured-description">{data.description}</div>}
</a>

<style>
	.card {
		display: grid;
		grid-template: auto 1fr / auto 1fr;
		height: 11rem;
		background: var(--gradient-subtle);
		border: 1px solid var(--gray-800);
		border-radius: 0.75rem;
		overflow: hidden;
		box-shadow: var(--shadow-sm);
		text-decoration: none;
		font-family: var(--font-brand);
		font-size: var(--text-lg);
		font-weight: 500;
		transition: box-shadow var(--theme-transition);
		filter: grayscale(100%); /*IMG EN N&B*/
	}

	.card:hover {
		box-shadow: var(--shadow-md);
		filter: grayscale(0%);
	} /*quand tu passes ta souris*/

	.title {
		grid-area: 1 / 1 / 2 / 2;
		z-index: 1;
		margin: 0.5rem;
		padding: 0.5rem 1rem;
		background: var(--gray-999);
		color: var(--gray-200);
		border-radius: 0.375rem;
	}

	img {
		grid-area: 1 / 1 / 3 / 3;
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.featured img {
		grid-area: 1 / 1 / 3 / 3;
	}

	.featured {
		height: 28rem;
		min-height: 28rem;
		grid-template: auto 1fr / auto 1fr;
		border: 2px solid var(--accent-regular);
		box-shadow: var(--shadow-lg);
		transform: scale(1.02);
		transition: all var(--theme-transition);
	}

	.featured:hover {
		transform: scale(1.05);
		box-shadow: var(--shadow-xl);
	}

	.featured .title {
		font-size: var(--text-xl);
		font-weight: 600;
		background: var(--accent-regular);
		color: var(--accent-text-over);
	}

	.featured-description {
		grid-area: 2 / 1 / 3 / 3;
		z-index: 2;
		margin: 1rem;
		padding: 1rem;
		background: transparent;
		color: white;
		text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
		border-radius: 0.5rem;
		font-size: var(--text-base);
		line-height: 1.4;
		font-style: italic;
		text-align: center;
		font-weight: 500;
		align-self: end;
	}


	@media (min-width: 50em) {
		.card {
			height: 22rem;
			border-radius: 1.5rem;
		}

		.featured {
			height: 32rem;
			min-height: 32rem;
		}

		.title {
			border-radius: 0.9375rem;
		}

		.featured .title {
			font-size: var(--text-2xl);
		}

		.featured-description {
			font-size: var(--text-lg);
			margin: 1.5rem;
			padding: 1.5rem;
			text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.9);
		}
	}
</style>
