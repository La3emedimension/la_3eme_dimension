---
import type { CollectionEntry } from 'astro:content';
import { localePath, type Locale } from '../i18n';
import { getSlugWithoutLocale } from '../lib/collections';

interface Props {
	products: CollectionEntry<'products'>[];
	locale?: Locale;
}

const { products, locale = 'fr' } = Astro.props;
---

{products.map((product) => {
	const slug = getSlugWithoutLocale(product.id, locale);
	const heroSection = product.data.sections?.find((s: any) => s.type === 'hero');
	const title = heroSection?.data?.title || product.data.seoTitle;
	const img = heroSection?.data?.heroImage?.src || product.data.ogImage;
	const imgAlt = heroSection?.data?.heroImage?.alt || '';
	return (
		<a class="card" href={localePath(`/product/${slug}/`, locale)}>
			<span class="title">{title}</span>
			{img && <img src={img} alt={imgAlt} loading="lazy" decoding="async" />}
		</a>
	);
})}

<style>
	.card {
		display: grid;
		grid-template: auto 1fr / auto 1fr;
		height: 11rem;
		background: var(--gradient-subtle);
		border: 1px solid var(--gray-800);
		border-radius: 0.75rem;
		overflow: hidden;
		box-shadow: var(--shadow-sm);
		text-decoration: none;
		font-family: var(--font-brand);
		font-size: var(--text-lg);
		font-weight: 500;
		transition: box-shadow var(--theme-transition);
		filter: grayscale(100%); /*IMG EN N&B*/
	}

	.card:hover {
		box-shadow: var(--shadow-md);
		filter: grayscale(0%);
	} /*quand tu passes ta souris*/

	.title {
		grid-area: 1 / 1 / 2 / 2;
		z-index: 1;
		margin: 0.5rem;
		padding: 0.5rem 1rem;
		background: var(--gray-999);
		color: var(--gray-200);
		border-radius: 0.375rem;
	}

	img {
		grid-area: 1 / 1 / 3 / 3;
		width: 100%;
		height: 100%;
		object-fit: cover;
		}


	@media (min-width: 50em) {
		.card {
			height: 22rem;
			border-radius: 1.5rem;
		}

		.title {
			border-radius: 0.9375rem;
		}
	}
</style>
