<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .community-section {
    padding: 6rem 0;
    background: var(--gray-900);
  }

  .community-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .community-text h2 {
    font-size: 2.5rem;
    color: var(--accent-regular);
    margin-bottom: 1.5rem;
  }

  .community-description {
    font-size: 1.1rem;
    color: var(--gray-300);
    line-height: 1.6;
    margin-bottom: 2rem;
  }

  .community-features {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 2.5rem;
  }

  .feature-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .feature-icon {
    font-size: 1.2rem;
  }

  .feature-text {
    color: var(--gray-300);
    font-size: 0.95rem;
  }

  .community-cta {
    text-align: center;
  }

  .cta-primary {
    background: var(--accent-regular);
    color: var(--accent-text-over);
    padding: 1.2rem 2.5rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: 600;
    font-size: 1.1rem;
    transition: all 0.3s ease;
    border: 2px solid var(--accent-regular);
    display: inline-block;
    margin-bottom: 1rem;
  }

  .cta-primary:hover {
    background: var(--accent-dark);
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }

  .cta-note {
    color: var(--gray-400);
    font-size: 0.9rem;
    font-style: italic;
    margin: 0;
  }

  /* Visual Preview */
  .community-preview {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .preview-card {
    background: var(--gray-999);
    padding: 2rem;
    border-radius: 1rem;
    border: 1px solid var(--gray-800);
    text-align: center;
    transition: transform 0.3s ease, border-color 0.3s ease;
  }

  .preview-card:hover {
    transform: translateY(-4px);
    border-color: var(--accent-regular);
  }

  .preview-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .preview-card h3 {
    font-size: 1.2rem;
    color: var(--gray-100);
    margin-bottom: 0.5rem;
  }

  .preview-card p {
    color: var(--gray-400);
    font-size: 0.9rem;
    margin: 0;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .community-content {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .community-text {
      order: 2;
    }

    .community-visual {
      order: 1;
    }

    .community-text h2 {
      font-size: 2rem;
      text-align: center;
    }

    .community-cta {
      text-align: center;
    }

    .preview-card {
      padding: 1.5rem;
    }
  }
</style>